<web-app version="3.0" metadata-complete="true"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <display-name>distributable-webapp</display-name>

    <distributable />

    <servlet>
        <servlet-name>BackupCacheInitiator</servlet-name>
        <servlet-class>org.jboss.sample.BackupCacheInitiator</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>BackupCacheInitiator</servlet-name>
        <url-pattern>/backup</url-pattern>
    </servlet-mapping>
    
    <listener>
        <listener-class>org.jboss.sample.ServletInitializer</listener-class>
    </listener>

  <servlet>
    <servlet-name>SessionServlet</servlet-name>
    <servlet-class>org.jboss.sample.SessionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SessionServlet</servlet-name>
    <url-pattern>/session</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>TransactionTestServlet</servlet-name>
        <servlet-class>org.jboss.sample.TransactionTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionTestServlet</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionServlet2</servlet-name>
        <servlet-class>org.jboss.sample.SessionServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionServlet2</servlet-name>
        <url-pattern>/session2</url-pattern>
    </servlet-mapping>

</web-app>
